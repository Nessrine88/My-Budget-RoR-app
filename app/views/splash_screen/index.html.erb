<div class="container d-flex flex-column align-items-center mt-5">
  <div class="mb-4">
    <h1 class="display-4">E-Pocket</h1>
    <%= image_tag 'money-logo.webp', alt: 'Free Wallet', class: ' pocketImg img-fluid'%>
  </div>

  <form action="<%= new_user_registration_path %>" method="get">
    <button type="submit" class="btn text-white btn-lg btn-block m-2 mt-5" style="width:100vw;background-color: #3778c2;position: absolute; bottom:0;left:0; width:99vw;margin:0;">Sign up</button>
  </form>

  <div class="text-gray" style="position:absolute; bottom: 90px;">
    You already have an account? <%= link_to 'Login', new_user_session_path %>
  </div>
</div>
