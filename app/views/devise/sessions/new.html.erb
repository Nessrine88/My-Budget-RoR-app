<div class="pt-5 m-5">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control no-border" %>
  </div>

  <div class="field mt-3">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control no-border" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "remember-me-label" %>
    </div>
  <% end %>

  <div class="actions",style: "">
  <%= f.submit "Log in", class: "btn btn-block text-white but p-2 fs-6", id: "loginBtn", style: "background-color: #3778c2;"%>

  </div>
<% end %>

<%= render "devise/shared/links" %>
